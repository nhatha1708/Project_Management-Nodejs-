mixin pagination(pagination)
    nav(aria-label="Page navigation")
        ul.pagination.justify-content-center.mt-4
            if (pagination.currentPage != 1)
                li.page-item
                    button.page-link(button-pagination=pagination.currentPage - 1) Trước

            - for (var i = 1; i <= pagination.totalPage; i++)
                li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                        button(
                            button-pagination=i
                        ).page-link(href="#") #{i}    

            if (pagination.currentPage != pagination.totalPage)
                li.page-item
                    button.page-link(button-pagination=pagination.currentPage + 1) Sau
    