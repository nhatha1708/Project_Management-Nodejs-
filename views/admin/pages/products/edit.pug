extends ../../layout/default.pug
include ../../mixins/alert.pug

block main
    h1 Edit Product
    +alert-success(5000)
    +alert-error(5000)

    form(
        action=`${prefixAdmin}/products/edit/${product._id}?_method=PATCH`
        method="POST"
        id="form-edit-product"
        enctype="multipart/form-data"
    )
        .row.g-3
            .col-6
                .form-group
                    label(for="title") Title
                    input.form-control(
                        type="text" 
                        name="title" 
                        id="title" 
                        placeholder="Product title" 
                        required
                        value=product.title
                    )
            .col-6
                .form-group
                    label(for="description") Description
                    textarea.form-control.textarea-tinymce(
                        name="description" 
                        id="description" 
                        rows="3" 
                        placeholder="Product description"
                        value=product.description
                    ) !{product.description}

            .col-3
                .form-group
                    label(for="price") Price
                    input.form-control(
                        type="text" 
                        name="price" 
                        id="price" 
                        value=product.price
                        min="0"
                    )

            .col-3
                .form-group
                    label(for="discountPercentage") Discount (%)
                    input.form-control(
                        type="text" 
                        name="discountPercentage" 
                        id="discountPercentage"
                        value=product.discountPercentage
                    )

            .col-3
                .form-group
                    label(for="stock") Stock
                    input.form-control(
                        type="text" 
                        name="stock" 
                        id="stock"
                        value=product.stock
                        min="0"
                    )

            .col-6
                div(
                    class="form-group image-preview" 
                    upload-image
                )
                    label(for="thumbnail") Thumbnail
                    input.form-control(
                        type="file" 
                        name="thumbnail" 
                        id="thumbnail" 
                        accept="image/*" 
                        upload-image-input
                    )
                    img.form-img-preview(
                        src=product.thumbnail || "/images/no-image.png"
                        upload-image-preview
                    )

                    button.close-button(type="button" upload-image-remove class="d-none") X

            //- Selected=product.status === 'active' sẽ gán thuộc tính selected nếu điều kiện đúng.
            .col-4
                .form-group
                    label(for="status") Status
                    select.form-control(name="status" id="status")
                        option(value="active", selected=product.status === 'active') Active
                        option(value="inactive", selected=product.status === 'inactive') Inactive

            .col-4
                .form-group
                    label(for="position") Position
                    input.form-control(
                        type="number" 
                        name="position" 
                        id="position" 
                        placeholder="Auto Increase"
                        value=product.position
                    )

            .col-12.text-end.mt-4
                button.btn.btn-primary(type='submit') Update Product

    script(src="/admin/js/product.js")
    script(src="/admin/js/script.js")
